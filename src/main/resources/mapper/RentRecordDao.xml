<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xyl.rental.dao.RentRecordDao">

    <resultMap type="com.xyl.rental.entity.RentRecord" id="RentRecordMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="houseName" column="house_name" jdbcType="VARCHAR"/>
        <result property="houseId" column="house_id" jdbcType="INTEGER"/>
        <result property="tenanId" column="tenan_id" jdbcType="INTEGER"/>
        <result property="owerId" column="ower_id" jdbcType="INTEGER"/>
        <result property="contractId" column="contract_id" jdbcType="INTEGER"/>
        <result property="status" column="status" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RentRecordMap">
        select
          id, house_name, house_id, tenan_id, ower_id, contract_id, status
        from rental.rent_record
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RentRecordMap">
        select
          id, house_name, house_id, tenan_id, ower_id, contract_id, status
        from rental.rent_record
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="RentRecordMap">
        select
          id, house_name, house_id, tenan_id, ower_id, contract_id, status
        from rental.rent_record
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="houseName != null and houseName != ''">
                and house_name = #{houseName}
            </if>
            <if test="houseId != null">
                and house_id = #{houseId}
            </if>
            <if test="tenanId != null">
                and tenan_id = #{tenanId}
            </if>
            <if test="owerId != null">
                and ower_id = #{owerId}
            </if>
            <if test="contractId != null">
                and contract_id = #{contractId}
            </if>
            <if test="status != null and status != ''">
                and status = #{status}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into rental.rent_record(house_name, house_id, tenan_id, ower_id, contract_id, status)
        values (#{houseName}, #{houseId}, #{tenanId}, #{owerId}, #{contractId}, #{status})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update rental.rent_record
        <set>
            <if test="houseName != null and houseName != ''">
                house_name = #{houseName},
            </if>
            <if test="houseId != null">
                house_id = #{houseId},
            </if>
            <if test="tenanId != null">
                tenan_id = #{tenanId},
            </if>
            <if test="owerId != null">
                ower_id = #{owerId},
            </if>
            <if test="contractId != null">
                contract_id = #{contractId},
            </if>
            <if test="status != null and status != ''">
                status = #{status},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from rental.rent_record where id = #{id}
    </delete>

</mapper>